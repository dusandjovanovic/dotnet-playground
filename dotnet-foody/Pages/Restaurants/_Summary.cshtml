@using dotnet_foody.Core
@model Restaurant

<div class="card mb-2">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="text-info mr-2"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
            Details
        </a>
        <a class="text-success mr-2"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
            Edit
        </a>
        <a class="text-danger"
           asp-page="./Delete"
           asp-route-restaurantId="@Model.Id">
            Delete
        </a>
    </div>
</div>