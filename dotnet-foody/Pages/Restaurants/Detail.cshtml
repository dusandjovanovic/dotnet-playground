@page "{restaurantId:int}"
@model dotnet_foody.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h2>Name: @Model.Restaurant.Name</h2>
<h4>Id: @Model.Restaurant.Id</h4>
<div>Location: @Model.Restaurant.Location</div>
<div>Cuisine: @Model.Restaurant.Cuisine</div>

<a asp-page="./List" class="btn btn-dark">All restaurants</a>